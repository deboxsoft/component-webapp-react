{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "strictPropertyInitialization": false,
    "outDir": "build/libs",
    "skipLibCheck": true,
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["**/__tests__", "**/__mocks__"]
}
